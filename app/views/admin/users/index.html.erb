<% breadcrumb :users, @users %>
<article>
  <div class="row admin-stats">
    <div class="large-24 medium-24 small-24 columns articles-admin">
      <h5>Users
        <span>
          <%= paginate @users, window: 2 %>
        </span>
      </h5>
      <ul>
        <% @users.each_with_index do |user, index| %>
          <li class="category-gradient">
            <h5>
              <%= "#{user.id}:\t#{user.username}\t - <i>#{user.email}</i>".html_safe %>
              <span>
                <%= link_to "<i class=\"fa fa-edit\"></i>".html_safe, edit_admin_user_path(user) %>
                <% unless user = current_user %>
                  <%= link_to "<i class=\"fa fa-remove\"></i>".html_safe, admin_user_path(user), method: :delete %>
                <% end %>
              </span>
            </h5>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</article>

<ul class="right">
  <%- categories.each do |category| -%>
    <li class="has-dropdown">
      <%= link_to category.name, category_path(category) %>
      <!-- begin category -->
      <ul class="dropdown">
        <li class="title back js-generated">
          <h5><a href="javascript:void(0)">Back</a></h5>
          <%= link_to category.name, category_path(category) %>
        </li>
        <%- category.subcategories.order("display_index ASC").each do |subcategory| -%>
          <li class="has-dropdown">
            <%= link_to subcategory.name, category_path(subcategory) %>
            <ul class="dropdown">
              <li class="title back js-generated">
                <h5><a href="javascript:void(0)">Back</a></h5>
              </li>
              <%- subcategory.articles.each do |sub_article| -%>
                <li>
                  <%= link_to sub_article.slug, category_article_path(category, sub_article) %>
                </li>
              <%- end -%>
            </ul>
          </li>
        <%- end -%>
          <%- category.articles.each do |article| -%>
            <li>
              <%= link_to article.slug, category_article_path(category, article) %>
            </li>
          <%- end -%>
      </ul>
    </li>
  <%- end -%>
</ul>

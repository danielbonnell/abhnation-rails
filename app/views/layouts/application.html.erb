<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <title>The Abh Nation</title>
</head>
<body>

  <!-- Header Image and Left Side Nav Links -->

  <div class="row collapse">
    <nav class="top-bar large-12 medium-12 small-12 columns" data-topbar role="navigation" data-options="is_hover:true">
      <ul class="title-area">
        <li class="name">
          <h1>
            <a href="/">The Abh Nation</a>
          </h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <!-- Right Side Nav Links -->
      <section class="top-bar-section">
        <%= render partial: '/layouts/navbar' %>
      </section>
    </nav>

    <!-- Header Foreground Image -->
    <div class="large-12 medium-12 small-12 columns header-logo">
      <div class="header-logo-text">The Abh <br />Nation</div>
    </div>
  </div>

  <!-- Breadcrumbs -->
  <div class="row">
    <%= breadcrumbs style: :foundation5, style: :ul, link_current: true, semantic: :true %>
  </div>

  <!-- Body -->
  <div class="row">
    <!-- Side Bar -->
    <aside class="large-2 medium-3 small-3 columns">
      <ul class="side-bar">
        <%- if current_user -%>
        <li>
          <h5><%= current_user.username %></h5>
        </li>
        <li class="avatar"><%= avatar %></li>
        <li><%= link_to "My Account", user_path(current_user) %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
        <li><%= link_to 'Log In', new_user_session_path %></li>
        <li><%= link_to 'Register', new_user_registration_path %></li>
        <%- end -%>
      </ul>

      <ul class="side-bar">
        <li>Something</li>
        <li>Something else</li>
        <li>Blah</li>
        <li>Etc.</li>
        <li>...</li>
      </ul>
      <div class="panel">
        <h5>Featured</h5>
        <p>Some random text here.</p>
        <a href="#">Read More →</a>
      </div>
    </aside>

    <!-- Main Content -->
    <div class="large-10 medium-9 small-9 columns" role="content">

      <%- flash.each do |key, value| -%>
        <div class="success label">
          <%= value %>
        </div>
      <%- end -%>

      <%= yield %>

      <%= javascript_include_tag 'application' %>
      <%= javascript_tag do %>
        $(function(){
        $(document).foundation();
        });
      <% end %>

    </div>
  </div>

  <!-- Footer -->
  <footer class="row">
    <div class="large-12 medium-12 small-12 columns"><hr/>
      <div class="row">
        <div class="large-6 medium-6 small-6 columns">
          <p>© Copyright 2014 Daniel Bonnell</p>
        </div>
        <div class="large-6 medium-6 small-6 columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
